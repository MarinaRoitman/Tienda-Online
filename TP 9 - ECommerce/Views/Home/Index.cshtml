|@{
    ViewBag.Title = "Home Page";
}

    <section class="my-4 pt-5">
        <!-- Alert -->
        <section>
            <div class="container-covid">
                <div class="row">
                    <div class="col">
                        <div class="alert alert-warning alert-dismissible fade show">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <svg class="bi bi-exclamation-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M8 15A7 7 0 108 1a7 7 0 000 14zm0 1A8 8 0 108 0a8 8 0 000 16z" clip-rule="evenodd" />
                                <path d="M7.002 11a1 1 0 112 0 1 1 0 01-2 0zM7.1 4.995a.905.905 0 111.8 0l-.35 3.507a.552.552 0 01-1.1 0L7.1 4.995z" />
                            </svg>
                            <strong> COVID-19 </strong> Debido a la pandemia los envios pueden tener retrasos. Lamentamos la tardanza.
                            Gracias por la colaboración.
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Fin Alert -->
        <br />
        <h1>ARMONY</h1>
        <br />
        <!-- Carousel -->
        <div class="container-fluid">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="~/Content/Imagenes utilizadas/Carousel 1.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/Imagenes utilizadas/Carousel 2.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="~/Content/Imagenes utilizadas/Carousel 3.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            <!-- Fin de carousel -->
            <br />
            <br />
            <h2>PRODUCTOS MAS VENDIDOS</h2>
                <br />
                <!-- Cards -->
                <div class="card-deck">
                    <div class="card">
                        <img src="~/Content/Imagenes utilizadas/2A.jpg" class="card-img-top" alt="Pulseras de oro">
                        <div class="card-body">
                            <h3 class="card-title"><strong>Pulseras indian</strong></h3>
                            <p class="card-text">Pulseras de oro diseñadas en la India por diseñadores de primera clase.</p>
                            <br />
                            <h4>3590 ARS</h4>
                        </div>
                        <h3>★★★★★</h3>
                        <button type="button" class="btn btn-outline-dark" onClick="location.href='@Url.Action("AgregarProducto", "Home", new { codigo = 2, quienLlamo = "Index" })'">COMPRAR AHORA</button>
                    </div>
                    <div class="card">
                        <img src="~/Content/Imagenes utilizadas/1V.png" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h3 class="card-title"><strong>Vestido Moonlight</strong></h3>
                            <p class="card-text">
                                Vestido de tirantes corte A, de color negro, hasta la rodilla, talles
                                XS, S, M, L, XL.
                            </p>
                            <h4>7990 ARS</h4>
                        </div>
                        <h3>★★★★★</h3>
                        <button type="button" class="btn btn-outline-dark" onClick="location.href='@Url.Action("AgregarProducto", "Home", new { codigo = 7, quienLlamo = "Index" })'">COMPRAR AHORA</button>
                    </div>
                    <div class="card">
                        <img src="~/Content/Imagenes utilizadas/4R.jpg" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h3 class="card-title"><strong>Remera camouflage</strong></h3>
                            <p class="card-text">
                                Remera de esampado camouflage, manga larga, tela gruesa
                                talles, XS, S, M, L, XL.
                            </p>
                            <h4>1590 ARS</h4>
                        </div>
                        <h3>★★★★★</h3>
                        <button type="button" class="btn btn-outline-dark" onClick="location.href='@Url.Action("AgregarProducto", "Home", new { codigo = 17, quienLlamo = "Index" })'">COMPRAR AHORA</button>
                    </div>
                </div>
                <!-- Fin de cards -->
</div>
    </section>
<br />
